<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Teams IO</title>
    <link rel="shortcut icon" type="image/jpg" href="/public/favicon.png"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" 
      rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" 
      crossorigin="anonymous">
    <link rel="stylesheet" href="/public/style.css" />
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script>
      const ROOM_ID = "<%= team._id %>";
      const user = "<%= user %>";
    </script>
  </head>
  <body>
    <div class="header">
      <div class="dashboard__back">
        <a href="/dashboard">
          <i class="fas fa-chevron-left fa-2x"></i>
        </a>
      </div>
      <div class="header__back">
        <i class="fas fa-chevron-left"></i>
      </div>
      <div class="logo">
        <h3>Team - <%= team.name %></h2>
      </div>
      <a id="logout" href="/users/logout" class="btn btn-secondary" style="margin-left: auto;margin-right: 2vw;">Logout</a>
    </div>  
    <div class="main">  
    <div class="main__left">
      <div class="videos__group">
        <div id="video-grid">

        </div>
      </div>
      <div class="options">
        <div class="options__left">
          <div id="stopVideo" class="options__button">
            <i class="fa fa-video-camera"></i>
          </div>
          <div id="muteButton" class="options__button">
            <i class="fa fa-microphone"></i>
          </div>
          <div id="showChat" class="options__button">
            <i class="fa fa-comment"></i>
          </div>
          <div id="cutCall" class="options__button background__red">
            <i class="fas fa-phone fa-rotate-225"></i>
          </div>
        </div>
        <!-- <div class="options__right">
          <div id="inviteButton" class="options__button">
            <i class="fas fa-user-plus"></i>
          </div>
        </div> -->
      </div>
    </div>
    <div class="main__right">
      <div class="main__chat_window">
          <div class="messages">
            <% chats.forEach(function(chat){ %>
              <div class="message">
                <b><i class="far fa-user-circle" aria-hidden="true"></i> <span>
                  <%= chat.user %>  
                </span> </b>
                <span><%= chat.message %></span>
              </div>
            <% }); %>
          </div>
      </div>
      <div class="main__message_container">
        <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here...">
        <div id="send" class="options__button">
          <i class="far fa-paper-plane" aria-hidden="true"></i>
        </div>
      </div>
    </div>
  </div>
  </body>
  <script src="/public/script.js"></script>
</html>
